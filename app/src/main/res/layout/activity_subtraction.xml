<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chiharu_miyosi.calculation_practice_app.SubtractionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--正解数-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="今の正解数:"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0/0問"
                    android:id="@+id/correct" />

            </LinearLayout>
        </LinearLayout>

        <!--問題と答え-->
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textView3"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/linearLayout3"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="50dp"
                    android:id="@+id/number1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="-"
                    android:textSize="50dp"
                    android:id="@+id/textView1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="50dp"
                    android:id="@+id/number2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="="
                    android:textSize="50dp"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="50dp"
                    android:id="@+id/answer" />

            </LinearLayout>

            <ImageView
                android:layout_width="44dp"
                android:layout_height="33dp"
                android:id="@+id/imageView"
                android:onClick="erase"
                android:src="@drawable/delete_button_1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/linearLayout3"
                android:layout_toEndOf="@+id/linearLayout3"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <!--数字のボタン-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/number1"
            android:layout_centerHorizontal="true"
            android:layout_weight="3.5">

            <!--1〜3-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number1"
                android:layout_above="@+id/button"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25dp"
                    android:id="@+id/b1"
                    android:onClick="click1"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="25dp"
                    android:id="@+id/b2"
                    android:onClick="click2"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="25dp"
                    android:id="@+id/b3"
                    android:onClick="click3"
                    android:layout_weight="1" />

            </LinearLayout>

            <!--4〜6-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="25dp"
                    android:id="@+id/b4"
                    android:onClick="click4"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25dp"
                    android:id="@+id/b5"
                    android:onClick="click5"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="25dp"
                    android:id="@+id/b6"
                    android:onClick="click6"
                    android:layout_weight="1" />
            </LinearLayout>

            <!--7〜9-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="25dp"
                    android:id="@+id/b7"
                    android:onClick="click7"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="25dp"
                    android:id="@+id/b8"
                    android:onClick="click8"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="25dp"
                    android:id="@+id/b9"
                    android:onClick="click9"
                    android:layout_weight="1" />
            </LinearLayout>

            <!--0-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/b0"
                    android:text="−"
                    android:textSize="25dp"
                    android:id="@+id/minus"
                    android:onClick="click_minus"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/b0"
                    android:onClick="click0"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <!--次へボタン-->
        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/b0"
            android:text="次へ！"
            android:textSize="30dp"
            android:id="@+id/button"
            android:onClick="next"
            android:layout_weight="0.7" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--まる-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/correct_img"
            android:src="@drawable/correct"
            android:clickable="true"
            android:onClick="image_pushed" />

        <!--ばつ-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/incorrect_img"
            android:src="@drawable/incorrect"
            android:clickable="true"
            android:onClick="image_pushed" />
    </RelativeLayout>

</RelativeLayout>
